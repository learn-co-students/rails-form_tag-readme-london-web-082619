<h1>Posts</h1>
<ul>
  <% @posts.each do |p| %>
    <li><%= link_to p.title, p %> - <%= p.description %></li>

    <li><%= link_to "Edit", edit_post_path(p) %></li>
    <li><%= link_to "Delete", post_path(p), method: :delete, data: {confirm: 'Are you sure?'} %> </li>
    <br>
  <% end %>
</ul>

<%= link_to "Add New Post", new_post_path %>